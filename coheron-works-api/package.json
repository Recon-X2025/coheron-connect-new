{
  "name": "coheron-works-api",
  "version": "1.0.0",
  "description": "Coheron ERP Backend API",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "setup-db": "tsx src/database/setup-db.ts",
    "migrate": "tsx src/database/migrate.ts",
    "migrate-campaigns": "tsx src/database/run-campaign-migration.ts",
    "migrate-inventory": "tsx src/database/run-inventory-migration.ts",
    "migrate-crm-rbac": "tsx src/database/run-crm-rbac-migration.ts",
    "seed": "tsx src/database/seed.ts",
    "seed-crm-rbac": "tsx src/database/seed-crm-rbac.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
